    ViewData["Title"] = "Privacy Policy";
}
<h1>@ViewData["Title"]</h1>

<div class="container">
    <p>This privacy policy outlines how our website collects, uses, and protects your personal information.</p>
    <h2>Information We Collect</h2>
    <p>When you register for an account on our website, we collect the following information from you:</p>
    <ul>
        <li>Name</li>
        <li>Email address</li>
        <li>Password</li>
    </ul>
    <h2>How We Use Your Information</h2>
    <p>We use the information we collect from you to:</p>
    <ul>
        <li>Provide you with access to our website and its features</li>
